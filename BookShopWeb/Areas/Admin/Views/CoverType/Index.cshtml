@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Cover Types List</h1>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="CoverType" asp-action="Create"><i class="bi bi-plus-square"></i> &ensp; Create New Cover Type</a>
        </div>
    </div>


    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <th scope="row">
                        @obj.Id
                    </th>
                    <th scope="row">
                        @obj.Name
                    </th>
                    <th scope="row">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-secondary mx-2" asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pen"></i>Edit</a>
                            <a class="btn btn-danger mx-2" asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </th>

                </tr>
            }
        </tbody>

    </table>
</div>


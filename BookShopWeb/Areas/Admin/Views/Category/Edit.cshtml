@model BookShop.Models.Category

<form method="post" asp-action="Edit">
    <fieldset>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Category</h2>
                <hr />
            </div>
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="form-label mt-4"></label>
                <input asp-for="DisplayOrder" class="form-control" placeholder="Enter Name">
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-success" style="width:150px">Update</button>
            <a class="btn btn-warning" style="width:200px" asp-controller="Category" asp-action="Index">Back to Category List</a>
        </div>

    </fieldset>
</form>




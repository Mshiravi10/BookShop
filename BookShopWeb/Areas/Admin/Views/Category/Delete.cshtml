@model BookShop.Models.Category

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <fieldset>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Category</h2>
                <hr />
            </div>
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input asp-for="Name" disabled class="form-control" placeholder="Enter Name">

            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="form-label mt-4"></label>
                <input asp-for="DisplayOrder" disabled class="form-control" placeholder="Enter Name">

            </div>
            <br />
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a class="btn btn-warning" style="width:200px" asp-controller="Category" asp-action="Index">Back to Category List</a>
        </div>

    </fieldset>
</form>




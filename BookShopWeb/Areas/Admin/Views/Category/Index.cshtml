@model IEnumerable<BookShop.Models.Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Category List</h1>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="fa-solid fa-layer-plus"></i> &ensp; Create New Category</a>
        </div>
    </div>


    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    DisplayOrder
                </th>
                <th scope="col">
                    Created Time
                </th>
                <th scope="col">

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <th scope="row">
                        @obj.Name
                    </th>
                    <th scope="row">
                        @obj.DisplayOrder
                    </th>
                    <th scope="row">
                        @obj.CreatedDateTime
                    </th>
                    <th scope="row">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-secondary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pen"></i>Edit</a>
                            <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </th>

                </tr>
            }
        </tbody>

    </table>
</div>

@model BookShop.Models.Company

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-10">

            <fieldset>
                <div class="container border p-3 mt-4 row">
                    <div class="row pb-2">
                        <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") Company</h2>
                        <hr />
                    </div>
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="form-label mt-4"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Title">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="form-label mt-4"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Title">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StreetAddress" class="form-label mt-4"></label>
                        <input asp-for="StreetAddress" class="form-control" placeholder="Enter Title">
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="form-label mt-4"></label>
                        <input asp-for="City" class="form-control" placeholder="Enter Title">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="State" class="form-label mt-4"></label>
                        <input asp-for="State" class="form-control" placeholder="Enter Title">
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostalCode" class="form-label mt-4"></label>
                        <input asp-for="PostalCode" class="form-control" placeholder="Enter Title">
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>

                <div class="col-12">
                    <br />
                    @if (Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-success" style="width:150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success"style="width:150px">Create</button>
                    }
                    <a class="btn btn-warning" style="width:200px" asp-controller="Company" asp-action="Index">Back to Company List</a>
                </div>

            </fieldset>

        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



